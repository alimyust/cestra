<?xml version="1.0"?>
<robot name="cestra_swerve" xmlns:xacro="http://www.ros.org/wiki/xacro">

<xacro:include filename="$(find cestra_description)/urdf/swerve/swerve_properties.xacro"/>
<xacro:include filename="$(find cestra_description)/urdf/inertial_macros.xacro" />
  <!-- Parameters -->
  <xacro:property name="base_height" value="0.3"/>
  <xacro:property name="base_length" value="0.3"/>
  <xacro:property name="base_width" value="0.05"/>
  <xacro:property name="wheel_radius" value="0.05"/>
  <xacro:property name="wheel_width" value="0.02"/>
  <xacro:property name="steer_link_height" value="0.05"/>

  <!-- Chassis -->
  <link name="base_link"> </link>

  <link name="chassis">
    <visual>
        <origin xyz="${base_height} 0 ${base_height/2}" rpy="0 0 0"/>
        <geometry>
            <box size="${base_length} ${base_width} ${base_height}"/>
        </geometry>
        <material name="white"/>
    </visual>

    <collision>
        <origin xyz="${base_height} 0 ${base_height/2}" rpy="0 0 0"/>
        <geometry>
            <box size="${base_length} ${base_width} ${base_height}"/>
        </geometry>
    </collision>

    <xacro:inertial_box mass="0.5" x="0.3" y="0.3" z="0.15">
      <origin xyz="${base_height} 0 ${base_height/2}" rpy="0 0 0"/>
    </xacro:inertial_box>
  </link>

  
  <joint name="chassis_joint" type="fixed">
      <parent link="base_link"/>
      <child link="chassis"/>
      <origin xyz="-0.1 0 0"/>
  </joint>

  <!-- Steering link (rotates around z-axis) -->
  <link name="steer_link">
    <visual>
      <geometry>
        <cylinder radius="0.03" length="${steer_link_height}"/>
      </geometry>
      <material name="blue">
        <color rgba="0.2 0.2 0.8 1.0"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.03" length="${steer_link_height}"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.5"/>
      <inertia ixx="0.001" iyy="0.001" izz="0.001" ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>

  <!-- Steering joint -->
  <joint name="steer_joint" type="revolute">
    <parent link="base_link"/>
    <child link="steer_link"/>
    <origin xyz="0 0 ${base_height/2}" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-3.1416" upper="3.1416" effort="10.0" velocity="3.0"/>
  </joint>

  <!-- Wheel link -->
  <link name="wheel_link">
    <visual>
      <geometry>
        <cylinder radius="${wheel_radius}" length="${wheel_width}"/>
      </geometry>
      <origin rpy="1.5708 0 0"/> <!-- rotate so wheel spins around y -->
      <material name="black">
        <color rgba="0.0 0.0 0.0 1.0"/>
      </material>
    </visual>

    <collision>
      <geometry>
        <cylinder radius="${wheel_radius}" length="${wheel_width}"/>
      </geometry>
      <origin rpy="1.5708 0 0"/>
    </collision>
    <inertial>
      <mass value="0.2"/>
      <inertia ixx="0.0001" iyy="0.0001" izz="0.0001" ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>

  <!-- Wheel joint (rotates wheel around its axle) -->
  <joint name="wheel_joint" type="continuous">
    <parent link="steer_link"/>
    <child link="wheel_link"/>
    <origin xyz="0 0 ${-steer_link_height/2}" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit effort="5.0" velocity="50.0"/>
  </joint>


    <gazebo>
        <plugin filename="gz-sim-joint-controller-system" name="gz::sim::systems::JointController">
            <joint_name>steer_joint</joint_name>
            <joint_name>wheel_joint</joint_name>
        </plugin>

    </gazebo>

</robot>
